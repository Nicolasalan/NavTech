<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- ######## COLORS ######## -->

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <!-- BASE LINK-->
    <link name="base_link">

    </link>

    <!-- ######## CHASSIS ######## -->

    <!-- JOINT -->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0 0 0"/>
    </joint>

    <!-- LINK -->
    <link name="chassis">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.125" length="0.006"/>
            </geometry>
            <material name="white"/>
        </visual>
    </link>

    <!-- ######## LEFT FRONT WHEEL ######## -->

    <!-- JOINT -->
    <joint name="left_front_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_front_wheel"/>
        <origin xyz="0.125 0.125 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <!-- LINK -->
    <link name="left_front_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.01"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>

    <!-- ######## RIGHT FRONT WHEEL ######## -->

    <!-- JOINT -->
    <joint name="right_front_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_front_wheel"/>
        <origin xyz="0.125 -0.125 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <!-- LINK -->
    <link name="right_front_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.01"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>

    <!-- ######## LEFT REAR WHEEL ######## -->

    <!-- JOINT -->
    <joint name="left_rear_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_rear_wheel"/>
        <origin xyz="-0.125 0.125 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <!-- LINK -->
    <link name="left_rear_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.01"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>

    <!-- ######## RIGHT REAR WHEEL ######## -->

    <!-- JOINT -->
    <joint name="right_rear_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_rear_wheel"/>
        <origin xyz="-0.125 -0.125 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <!-- LINK -->
    <link name="right_rear_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.01"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>


</robot>