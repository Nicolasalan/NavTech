<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- ######## COLORS ######## -->

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <!-- BASE LINK-->
    <link name="base_link">

    </link>

    <!-- ######## CHASSIS ######## -->

    <!-- JOINT -->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0 0 0"/>
    </joint>

    <!-- LINK -->
    <link name="chassis">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.125" length="0.006"/>
            </geometry>
            <material name="white"/>
        </visual>
    </link>

    <!-- ######## PLATFORM 1 ######## -->

    <!-- JOINT -->
    <joint name="platform1_joint" type="fixed">
        <parent link="chassis"/>
        <child link="platform1"/>
        <origin xyz="0 0 0.07"/>
    </joint>

    <!-- LINK -->
    <link name="platform1">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.125" length="0.006"/>
            </geometry>
            <material name="white"/>
        </visual>
    </link>

    <!-- ######## PLATFORM 2 ######## -->

    <!-- JOINT -->
    <joint name="platform2_joint" type="fixed">
        <parent link="chassis"/>
        <child link="platform2"/>
        <origin xyz="0 0 0.14"/>
    </joint>

    <!-- LINK -->
    <link name="platform2">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.125" length="0.006"/>
            </geometry>
            <material name="white"/>
        </visual>
    </link>

    <!-- ######## PLATFORM 3 ######## -->

    <!-- JOINT -->
    <joint name="platform3_joint" type="fixed">
        <parent link="chassis"/>
        <child link="platform3"/>
        <origin xyz="0 0 0.21"/>
    </joint>

    <!-- LINK -->
    <link name="platform3">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.125" length="0.006"/>
            </geometry>
            <material name="white"/>
        </visual>
    </link>

    <!-- ######## LEFT WHEEL ######## -->

    <!-- JOINT -->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.145 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <!-- LINK -->
    <link name="left_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.05"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>

    <!-- ######## RIGHT WHEEL ######## -->

    <!-- JOINT -->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.145 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <!-- LINK -->
    <link name="right_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.05"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>

    <!-- ######## FRONT WHEEL ######## -->

    <!-- JOINT -->
    <joint name="front_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="front_wheel"/>
        <origin xyz="0.145 0 0" rpy="0 ${pi/2} 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <!-- LINK -->
    <link name="front_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.05"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>

    <!-- ######## BACK WHEEL ######## -->

    <!-- JOINT -->
    <joint name="back_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="back_wheel"/>
        <origin xyz="-0.145 0 0" rpy="0 ${pi/2} 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <!-- LINK -->
    <link name="back_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.05"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>

</robot>