<launch>

<!--######################## argument list #################################-->

  <arg name="gui_rviz"            default="true"/>
  <arg name="rviz_file"           default="$(find robot_description)/rviz/robot.rviz"/>

<!--#################### interface #########################################-->

	<!-- rviz -->
  <group if="$(arg gui_rviz)">
		<node name="rviz" pkg="rviz" type="rviz" output="screen"
		  args="-d $(arg rviz_file)" />
  </group>

</launch>