<launch>

<!--######################## argument list #################################-->

  <arg name="x"           default="0"/>
  <arg name="y"           default="0"/>
  <arg name="yaw"         default="0"/>
  <arg name="gui"         default="false"/>
  <arg name="world_name"  default="bookstore"/>

<!--#################### generate urdf from xacro  ########################-->

  <param name="robot_description"
    command="$(find xacro)/xacro $(find robot_description)/robot/robot.urdf.xacro" />

<!--#################### simulation #######################################-->

  <!-- start gazebo server -->
  <param name="/use_sim_time" value="true"/>
  <node name="gazebo" pkg="gazebo_ros" type="gzserver" output="screen"
	args="--verbose $(find robot_nav)/data/map/$(arg world_name)/gazebo.world" />

  <!-- start gazebo client -->
  <group if="$(arg gui)">
    <node name="gazebo_gui" pkg="gazebo_ros" type="gzclient" output="screen" />
  </group>

  <node name="spawn_robot" pkg="gazebo_ros" type="spawn_model"
	args="-param robot_description
	      -urdf
	      -x $(arg x)
	      -y $(arg y)
	      -Y $(arg yaw)
	      -model robot">
  </node>

</launch>