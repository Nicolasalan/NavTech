<launch>

<!--######################## Base ##########################################-->

  <node name="serial_node" pkg="rosserial_python" type="serial_node.py" output="screen">
    <param name="port" value="/dev/base"/>
    <param name="baud" value="57600"/>
  </node>

  <node name="robot_base_odom" pkg="robot_description" type="odom.py">
    <rosparam command="load" file="$(find robot_description)/config/base.yaml"/>
  </node>

<!--######################## laser #########################################-->

  <node name="rplidarNode" pkg="rplidar_ros"  type="rplidarNode" output="screen">
    <remap from="scan" to="base_scan" />
    <param name="serial_port" type="string" value="/dev/laser_top_rplidar_a1"/>
    <param name="frame_id" type="string" value="base_scan"/>
  </node> 

</launch>