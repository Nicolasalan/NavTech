<launch>

<!--######################## Base ##########################################-->

  <node name="serial_node" pkg="rosserial_python" type="serial_node.py" output="screen">
    <param name="port" value="/dev/base"/>
    <param name="baud" value="57600"/>
  </node>

  <node name="robot_base_odom" pkg="robot_description" type="odom.py">
    <rosparam command="load" file="$(find robot_description)/config/robot/base.yaml"/>
  </node>

<!--######################## laser #########################################-->

<!-- laser -->
 
<node name="rplidarNode" pkg="rplidar_ros"  type="rplidarNode" output="screen">
    <remap from="scan"                to="base_scan"/>
    <param name="serial_port"         type="string"    value="/dev/laser_rplidar_s1"/>
    <param name="frame_id"                             value="base_scan"/>
    <param name="serial_baudrate"     type="int"       value="256000"/>
    <param name="inverted"            type="bool"      value="true"/>
    <param name="angle_compensate"    type="bool"      value="true"/>
    <param name="scan_frequency"      type="double"    value="10.0"/>
  </node>s

</launch>